{
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:css": "tailwindcss build resources/css/checkout.css -o public/css/checkout.css"
    },
    "devDependencies": {
        "@shufo/prettier-plugin-blade": "^1.14.1",
        "@tailwindcss/typography": "^0.5.16",
        "@thoughtbot/tailwindcss-aria-attributes": "^0.2.0",
        "autoprefixer": "^10.4.19",
        "flowbite": "^2.4.1",
        "laravel-vite-plugin": "^0.7.2",
        "postcss": "^8.4.31",
        "preline": "^2.5.1",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.5",
        "tailwindcss": "^3.3.5",
        "vite": "^4.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "bracketSpacing": true,
        "printWidth": 5000,
        "singleAttributePerLine": true,
        "overrides": [
            {
                "files": [
                    "*.blade.php"
                ],
                "options": {
                    "parser": "blade",
                    "tabWidth": 4,
                    "sortTailwindcssClasses": true
                }
            }
        ],
        "plugins": [
            "@shufo/prettier-plugin-blade",
            "prettier-plugin-tailwindcss"
        ]
    },
    "dependencies": {
        "@ryangjchandler/alpine-clipboard": "github:ryangjchandler/alpine-clipboard",
        "notyf": "^3.10.0",
        "pusher-js": "^8.4.0"
    }
}
